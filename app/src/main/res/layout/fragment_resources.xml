<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/resources_addResourceBtn"
        android:layout_width="351dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#000000"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Add Resource"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resources_contact2" />

    <TextView
        android:id="@+id/resources_contact2"
        android:layout_width="361dp"
        android:layout_height="73dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:autoLink="all"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/resources_contacts2"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resources_emergency2" />

    <TextView
        android:id="@+id/resources_emergency2"
        android:layout_width="356dp"
        android:layout_height="74dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Your Emergency Resources"
        android:textColor="#C10909"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resources_contact" />

    <TextView
        android:id="@+id/resources_emergency"
        android:layout_width="351dp"
        android:layout_height="77dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Given Emergency Resources"
        android:textColor="#C10909"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resources_contact"
        android:layout_width="356dp"
        android:layout_height="259dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:autoLink="all"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/resources_contact"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resources_emergency" />

</androidx.constraintlayout.widget.ConstraintLayout>